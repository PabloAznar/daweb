                <th scope="col">Fecha alta</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each estacion}}
            <tr>
                <td id="nombre">{{nombre}}</td>
                <td id="capacidad">{{capacidad}}</td>
                <td id="numero_bicicletas">{{numero_bicicletas}}</td>
                <td id="codigo_postal">{{codigo_postal}}</td>
                <td id="fecha_alta">{{fecha_alta}}</td>
                <td>
                    <div class="btn-group-vertical">
                        <button class="btn btn-danger eliminar-btn" data-id="{{id}}">Eliminar</button>
                        <button class="btn btn-primary aniadir-btn" data-id="{{id}}">AÃ±adir bicicleta</button>
                        <button class="btn btn-secondary listado-btn" data-id="{{id}}">Listado bicicletas</button>
                    </div>
                </td>
                            <div id="panel" class="panel"></div>

            </tr>
            {{/each}}
        </tbody>
    </table>


    <script src="javascripts/eliminarEstacion.js"></script>
    <script src="javascripts/altaBicicleta.js"></script>
</div>
</body>
</html>